package %PACKAGE%.storage;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.Preferences;
import %PACKAGE%.%MAIN_CLASS%;

public class CustomPreferences {
  private final Preferences preferences;

  public CustomPreferences() {
    this.preferences = Gdx.app.getPreferences("%PACKAGE%");
  }

  public static CustomPreferences getInstance() {
    return %MAIN_CLASS%.getInstance().getInstanceOf(CustomPreferences.class);
  }

  private String getProperty(String key, String defaultValue) {
    return this.preferences.getString(key, defaultValue);
  }

  private void setProperty(String key, String value) {
    this.preferences.putString(key, value);
    this.preferences.flush();
  }

  public Boolean isPurchasesRestored() {
    return Boolean.parseBoolean(this.getProperty("purchases-restored", "false"));
  }

  public void setPurchasesRestored(Boolean value) {
    this.setProperty("purchases-restored", value.toString());
  }
}